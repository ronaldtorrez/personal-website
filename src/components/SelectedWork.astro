---
import { StringNoNSchema } from '@schemas/string.ts'
import { z } from 'astro:content'
import Heading from '@components/UI/Heading.astro'

const Schema = z.object({
	title: StringNoNSchema,
	description: StringNoNSchema
})

type Props = z.input<typeof Schema>

const { title, description } = Schema.parse(Astro.props as Props)
---

<section class="gap-20 p-0">
	<div class="md:grid md:grid-cols-12">
		<Heading
			level={3}
			class="md:col-span-7 md:col-start-6"
		>
			{title}
		</Heading>
		<p class="md:col-span-7 md:col-start-6">{description}</p>
	</div>

	<div class="grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-3 lg:gap-20">
		<slot />
	</div>
</section>
