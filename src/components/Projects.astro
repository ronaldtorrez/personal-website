---
import Project1Bg from '@assets/projects/project-1-bg.webp'

import Wordpress from '@assets/logos/wordpress.svg'
import Woocommerce from '@assets/logos/woocommerce.svg'
import Wpml from '@assets/logos/wpml.svg'
import Elementor from '@assets/logos/elementor.svg'

import ProjectList from './ProjectList.astro'
---

<section id="projects">
	<div class="container">
		<h2 class="text-light-2">SELECTED WORKS /</h2>

		<div class="mb-20 md:grid md:grid-cols-12">
			<h3 class="md:col-span-7 md:col-start-6">Projects</h3>

			<p class="md:col-span-7 md:col-start-6">
				I create digital experiences where design and technology meet, blending utility, emotion, and detail
				into something truly meaningful.
			</p>
		</div>

		<div class="flex flex-col gap-60">
			<ProjectList
				number="01"
				name="NURA"
				description="Modern Marketing Website"
				year={2025}
				videoId="azQvkfKE59bPfoxN6100Dbm8Hhsl29Pc15xIfFCVrnc8"
				backgroundImage={Project1Bg}
				icons={[Wordpress, Woocommerce, Wpml, Elementor]}
			/>
			<ProjectList
				number="02"
				name="Job Portal"
				description="Full-Stack Recruitment Platform"
				year={2024}
				videoId="ZV01irv5jPmaRLo6XEcm5o4QHrEd9g6Rr5GyqdMd1R6g"
				backgroundImage={Project1Bg}
				icons={[Wordpress, Woocommerce, Wpml, Elementor]}
			/>
		</div>
	</div>
</section>
