---
import Quotes from "phosphor-astro/QuotesDuotone.astro";
import ArrowUpRight from "phosphor-astro/ArrowUpRightDuotone.astro";
import { Picture } from "astro:assets";
import headerImg from "@assets/header-img.webp";
import ShortDate from "@components/ShortDate.astro";
import Navbar from "@components/NavBar.astro";
---

<header class="flex min-h-screen w-full flex-col items-center justify-center gap-4 bg-slate-200">
	<Navbar />
	<div class="container">
		<h1 class="mx-auto mb-6 text-center text-7xl font-extrabold uppercase md:text-9xl lg:mb-10">Ronald Torrez</h1>
		<div class="grid w-full items-end gap-10 sm:grid-cols-2 md:gap-20 lg:grid-cols-3">
			<div class="sm:col-span-2 lg:col-span-1">
				<Quotes class="mb-10 hidden size-40 rotate-180 lg:block" />
				<div class="flex flex-col items-center gap-6 lg:items-start">
					<p
						class="px-8 text-center text-xl font-medium text-gray-600 md:text-2xl lg:px-0 lg:pr-8 lg:text-left"
					>
						Open to job opportunities worldwide. Passionate about building polished, intuitive, and
						thoughtful digital experiences that leave a mark.
					</p>
					<button
						class="flex w-fit items-center gap-4 rounded-full bg-black px-6 py-3 text-lg font-bold text-white"
					>
						Contact me
						<ArrowUpRight class="size-8" />
					</button>
				</div>
			</div>
			<Picture src={headerImg} alt="Photo of me" class="brightness rounded-md grayscale" />
			<p class="text-right text-xl font-medium text-gray-600 md:text-2xl">
				Work Together, today
				<br />
				<ShortDate class="text-6xl font-extrabold text-black md:text-8xl" />
			</p>
		</div>
	</div>
</header>
